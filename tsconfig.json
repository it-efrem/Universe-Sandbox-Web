{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    },
    "outDir": "./dist",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "plugins": [
    {
      "transform": "typescript-plugin-styled-components",
      "type": "config",
      "minify": true
    }
  ]
}
